{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Compte de perception de gain - {{parent()}}{% endblock %}

{% block _container %}
    <div class="page-header">
        <h3>Compte de perception de gain</h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{path('user_update')}}" class="pull-right">Modifier</a>
            <table class="table table-striped">
                <tr>
                    <th class="text-align-right" style="border-top: none;">ID</th>
                    <td style="border-top: none;">{{app.user.code}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Nom & Prenoms</th>
                    <td>{{app.user.nom}} {{app.user.prenoms}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Sexe</th>
                    <td>{{app.user.sexe.sexe}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Date De Naissance</th>
                    <td>{{app.user.naissance|date('d M Y')}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Telephone</th>
                    <td>{{app.user.tel}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Email</th>
                    <td>{{app.user.email}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Ville & Pays</th>
                    <td>{{app.user.ville}}, {{app.user.pays}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Adresse</th>
                    <td>{{app.user.adresse}}</td>
                </tr>
                <tr>
                    <th class="text-align-right">Profession</th>
                    <td>{{app.user.profession}}</td>
                </tr>
            </table>
        </div>
    </div>
    <br />
{% endblock %}