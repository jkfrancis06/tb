{% extends '::base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-lg-offset-4 col--4 col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
            <div class="page-header">
                <h1>Connexion</h1>
            </div>
            {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
  {% endif %}
            <form action="{{path('user_login_check')}}" method="post">
                <div class="form-group">
                    <label for="username">Numero de telephone</label>
                    <input name="_username" type="text" class="form-control" id="username" value="{{last_username}}"/>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input name="_password" type="password" class="form-control" id="password"/>
                </div>
                <button type="submit" class="btn btn-default pull-right">Connexion</button>
            </form>
        </div>
    </div>
{% endblock %}