{% extends 'CoreBundle:Admin:base.html.twig' %}

{% block title %}Compte Admin - {{parent()}}{% endblock %}

{% block _container %}
    <div class="row">
        <div class="page-header">
            <h3>Compte Admin</h3>
        </div>
        <div class="col-lg-offset-1 col-lg-9 col-md-offset-1 col-md-8 col-sm-offset-1 col-sm-10">
            {{form_start(form)}}
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        {{form_label(form.content, 'Contenu')}}
                        {{form_widget(form.content, {'attr': {'class': 'form-control'}})}}
                        {{form_errors(form.content)}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        {{form_label(form.payer, 'Payer')}}
                        {{form_widget(form.payer)}}
                        {{form_errors(form.payer)}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div>
                    <input type="submit" value="Valider" class="btn btn-info col-md-offset-5" />
                </div>
            </div>
            {{form_end(form)}}
        </div>
    </div>
    <br/>

{% endblock %}