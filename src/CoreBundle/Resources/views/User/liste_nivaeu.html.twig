{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Liste des membres par niveau - {{parent()}}{% endblock %}

{% block _container %}
    <div class="page-header">
        <h3>Liste des membres par niveau</h3>
    </div>
    {% for m in mm %}
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="panel-title">
                            Matrice
                            {% if loop.index == 1 %}
                                Argent
                            {% elseif loop.index == 2 %}
                                Or
                            {% else %}
                                Diamant
                            {% endif %}
                        </span>
                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>Nom $ Prenoms</th>
                            <th>ID</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            <th>Ville & Pays</th>
                            <th>ID Parrain</th>
                        </tr>
                        {% for n in m %}
                            {% if n is not empty %}
                                <tr>
                                    <td colspan="6" style="text-align: center;">
                                        <strong>Niveau {{loop.index}}</strong>
                                    </td>
                                </tr>
                                {% for u in n %}
                                    <tr>
                                        <td>{{u.nom}} {{u.prenoms}}</td>
                                        <td>{{u.code}}</td>
                                        <td>{{u.tel}}</td>
                                        <td>{{u.email}}</td>
                                        <td>{{u.ville}}, {{u.pays}}</td>
                                        <td>{{u.codeParrain}}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    {% endfor %}
    <br />
{% endblock %}