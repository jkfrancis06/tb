{% extends 'CoreBundle:Admin:base.html.twig' %}

{% block title %}Mon Compte - {{parent()}}{% endblock %}

{% block _container %}
<div class="page-header">
    <h3>Mon Compte</h3>
</div>
<div class="row" id="profil">
    <div class="col-lg-12">
        <table class="table table-striped">
            <tr>
                <th class="text-align-right">Nom & Prenoms</th>
                <td>{{app.user.nom}} {{app.user.prenoms}}</td>
            </tr>
            <tr>
                <th class="text-align-right">Telephone</th>
                <td>{{app.user.tel}}</td>
            </tr>
            <tr>
                <th class="text-align-right">Email</th>
                <td>{{app.user.email}}</td>
            </tr>
        </table>
    </div>
</div>
<br />
{% endblock %}