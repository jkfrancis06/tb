{% extends '::base.html.twig' %}

{% block title %}Paiement - {{parent()}}{% endblock %}

{% block container %}
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
            <div class="page-header">
                <h1>Paiement</h1>
            </div>
            {{form_start(form)}}
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-sm-6">
                        {% for m in app.session.flashbag.get('info') %}
                        <div class="alert alert-info">{{m}}</div>
                        {% endfor %}
                        {% for m in app.session.flashbag.get('warning') %}
                        <div class="alert alert-warning">{{m}}</div>
                        {% endfor %}
                        <div class="form-group">
                            {{form_label(form.tel, 'Numero de telephone du tramsfert')}}
                            {{form_widget(form.tel, {'attr': {'class': 'form-control'}})}}
                            {{form_errors(form.tel)}}
                        </div>
                        <div class="form-group">
                            {{form_label(form.code, 'Code du transfert')}}
                            {{form_widget(form.code, {'attr':{'class':'form-control'}})}}
                            {{form_errors(form.code)}}
                        </div>
                        <input type="submit" value="Valider" class="btn btn-default pull-right" />
                    </div>
                </div>
            {{form_end(form)}}
        </div>
    </div>
    <br/>
{% endblock %}