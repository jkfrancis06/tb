{% extends 'CoreBundle:Admin:base.html.twig' %}

{% block title %}Paiements Invalides - {{parent()}}{% endblock %}

{% block _container %}
<div class="page-header">
    <h3>Paiements Invalides</h3>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-condensed table-striped">
            <tr>
                <th>Numero</th>
                <th>Code</th>
            </tr>
            {% for i in ps %}
            <tr>
                <td>{{i.tel}}</td>
                <td>
                    {{i.code}}
                    <a href="{{path('valider_paiement', {'id': i.id})}}" class="btn btn-primary btn-xs pull-right">Valider</a>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
<br />
{% endblock %}