{% extends 'CoreBundle:Admin:base.html.twig' %}

{% block title %}Ajouter Une Formation - {{parent()}}{% endblock %}

{% block _container %}
<div class="row">
    <div class="page-header">
        <h3>Ajouter Une Formation</h3>
    </div>
    <div class="col-lg-offset-4 col-lg-4 col-md-offset-1 col-md-8 col-sm-offset-1 col-sm-10">
        {{form_start(form)}}
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        {{form_label(form.file, 'Fichier')}}
                        {{form_widget(form.file, {'attr': {'class': 'form-control'}})}}
                    </div>
                </div>
                <div class="col-lg-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        {{form_label(form.titre, 'Titre')}}
                        {{form_widget(form.titre, {'attr': {'class': 'form-control'}})}}
                    </div>
                </div>
                <div class="col-lg-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        {{form_label(form.formationType, 'Type')}}
                        {{form_widget(form.formationType, {'attr': {'class': 'form-control'}})}}
                    </div>
                    <input type="submit" value="Creer" class="btn btn-default pull-right" />
                </div>
            </div>
        {{form_end(form)}}
    </div>
</div>
<br/>
{% endblock %}