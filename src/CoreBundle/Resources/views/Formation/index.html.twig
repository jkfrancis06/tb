{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Formations - {{parent()}}{% endblock %}

{% block _container %}
<div class="row">
    <div class="page-header">
        <h3>Formations</h3>
    </div>
    <div class="col-lg-12 col-md-8 col-sm-offset-1 col-sm-10">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>Type</th>
            </tr>
            {% for f in fs %}
                <tr>
                    <td><a href="{{asset('uploads/formations/')~f.file}}">{{f.titre}}</a></td>
                    <td>{{f.createAt|date('d M Y')}}</td>
                    <td>{{f.formationType.libelle}}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>
<br/>
{% endblock %}