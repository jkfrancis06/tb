{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Gains - {{parent()}}{% endblock %}

{% block _container %}
<div class="row">
    <div class="page-header">
        <h3>Gains</h3>
    </div>
    {% if gains is not empty %}
    {% set total = 0 %}
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Date</th>
                    <th>Gain</th>
                </tr>
                {% for i in gains %}
                {% set total = total + i.gain %}
                <tr>
                    <td>{{i.createAt|date('d M Y')}}</td>
                    <td>{{i.gain}}</td>
                </tr>
                {% endfor %}
                <tr>
                    <th>Total</th>
                    <td>{{total}}</td>
                </tr>
            </table>
        </div>
    </div>
    {% else %}
    Aucun achat.
    {% endif %}
</div>
<br/>
{% endblock %}