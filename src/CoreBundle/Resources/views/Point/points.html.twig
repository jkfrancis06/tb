{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Points - {{parent()}}{% endblock %}

{% block _container %}
<div class="row">
    <div class="page-header">
        <h3>Points</h3>
    </div>
    {% if points is not empty %}
    {% set total = 0 %}
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Date</th>
                    <th>Point</th>
                </tr>
                {% for p in points %}
                {% set total = total + p.point %}
                <tr>
                    <td>{{p.createAt|date('d M Y')}}</td>
                    <td>{{p.point}}</td>
                </tr>
                {% endfor %}
                <tr>
                    <th>Total</th>
                    <td>{{total}}</td>
                </tr>
            </table>
        </div>
    </div>
    {% else %}
    Aucun points.
    {% endif %}
</div>
<br/>
{% endblock %}