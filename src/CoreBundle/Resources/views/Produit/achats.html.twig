{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Achats - {{parent()}}{% endblock %}

{% block _container %}
<div class="row">
    <div class="page-header">
        <h3>Achats</h3>
    </div>
    {% if ps is not empty %}
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Nom Du Produit</th>
                    <th>Quantite</th>
                    <th>Date Commande</th>
                </tr>
                {% for c in ps %}
                <tr>
                    <td>{{c.produit.nom}}</td>
                    <td>{{c.qte}}</td>
                    <td>{{c.dateCommande|date('d M Y')}}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    {% else %}
    Aucun achat.
    {% endif %}
</div>
<br/>
{% endblock %}