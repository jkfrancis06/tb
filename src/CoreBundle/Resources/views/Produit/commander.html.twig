{% extends 'CoreBundle:User:base.html.twig' %}

{% block title %}Commander - {{parent()}}{% endblock %}

{% block _container %}
    <div class="row">
        <div class="page-header">
            <h3>Commander</h3>
        </div>
        <div class="col-lg-offset-1 col-lg-9 col-md-offset-1 col-md-8 col-sm-offset-1 col-sm-10">
            {{form_start(form)}}
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            {{form_label(form.produit, 'Produit')}}
                            {{form_widget(form.produit, {'attr': {'class': 'form-control'}})}}
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            {{form_label(form.qte, 'Quantite')}}
                            {{form_widget(form.qte, {'attr': {'class': 'form-control'}})}}
                        </div>
                        <input type="submit" value="Commander" class="btn btn-default pull-right" />
                    </div>
                </div>
            {{form_end(form)}}
        </div>
    </div>
    <br/>
{% endblock %}